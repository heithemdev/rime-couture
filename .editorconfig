# Monorepo-wide editor defaults
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{png,jpg,jpeg,gif,webp,svg,ico,woff,woff2}]
insert_final_newline = false

[*.env*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
