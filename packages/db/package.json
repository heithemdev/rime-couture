{
  "name": "@repo/db",
  "version": "0.1.0",
  "private": true,
  "description": "BZ Market database package (Prisma + helpers + seed)",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": { "types": "./src/index.ts", "import": "./src/index.ts", "require": "./src/index.ts" }
  },
  "files": ["src", "prisma"],
  "engines": { "node": ">=18.18.0" },
  "scripts": {
    "prepare": "prisma generate",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --force",
    "studio": "prisma studio",
    "db:seed": "prisma db seed",
    "build": "node -e \"require('fs').mkdirSync('dist',{recursive:true}); require('fs').writeFileSync('dist/.keep','')\""
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2"
  },
  "devDependencies": {
    "prisma": "^6.18.0",
    "tsx": "^4.20.6",
    "@types/node": "^22.15.3"
  }
}
