{
  "name": "@repo/db",
  "version": "0.1.0",
  "private": true,
  "description": "DB package (Prisma + helpers + seed)",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": ["src", "prisma"],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "prepare": "prisma generate",
    "generate": "prisma generate",
    "validate": "prisma validate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --force",
    "studio": "prisma studio",
    "db:seed": "prisma db seed",
    "build": "node -e \"require('fs').mkdirSync('dist',{recursive:true}); require('fs').writeFileSync('dist/.keep','')\""
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.5",
    "prisma": "7.2.0",
    "tsx": "^4.20.6"
  }
}
